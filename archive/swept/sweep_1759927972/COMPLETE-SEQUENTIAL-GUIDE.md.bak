  const handleCopy = async (text: string, itemName: string) => {
    try {
      await navigator.clipboard.writeText(text);
      
      setCopiedItem(itemName);
      
      toast({
        title: "Copied! âœ“",
        description: `${itemName} copied to clipboard`,
        duration: 2000,
