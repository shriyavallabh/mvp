<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - FinAdvise Operations Center</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <link rel="stylesheet" href="/css/dashboard.css">
</head>
<body>
    <%- include('partials/navbar') %>
    
    <div class="container-fluid">
        <div class="row">
            <%- include('partials/sidebar') %>
            
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">System Overview</h1>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <button type="button" class="btn btn-sm btn-outline-secondary" onclick="refreshDashboard()">
                            <i class="bi bi-arrow-clockwise"></i> Refresh
                        </button>
                    </div>
                </div>

                <!-- Story 3.2 Webhook Integration Status -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="alert alert-info border-0">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-link-45deg me-2"></i>
                                <strong>Story 3.2 Integration Active:</strong> 
                                <span class="ms-2">Real-time webhook monitoring, button analytics, and CRM tracking enabled</span>
                                <span id="webhook-status-indicator" class="badge bg-success ms-auto">Connected</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Webhook & System Metrics Row -->
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="card border-primary">
                            <div class="card-body">
                                <h5 class="card-title text-primary">Webhook Status</h5>
                                <div class="d-flex align-items-center">
                                    <div class="flex-grow-1">
                                        <span id="webhook-status" class="badge bg-success">Healthy</span>
                                        <div class="mt-2">
                                            <small class="text-muted">Uptime: <span id="webhook-uptime">99.9%</span></small><br>
                                            <small class="text-muted">Messages: <span id="webhook-messages">0</span></small>
                                        </div>
                                    </div>
                                    <i class="bi bi-webhook text-primary fs-2"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-3">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">System Health</h5>
                                <div class="d-flex align-items-center">
                                    <div class="flex-grow-1">
                                        <span id="system-status" class="badge bg-success">Healthy</span>
                                    </div>
                                    <i class="bi bi-heart-pulse-fill text-success fs-2"></i>
                                </div>
                                <small class="text-muted">CPU: <span id="cpu-usage">0</span>%</small><br>
                                <small class="text-muted">Memory: <span id="memory-usage">0</span>%</small>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-3">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Active Advisors</h5>
                                <div class="d-flex align-items-center">
                                    <div class="flex-grow-1">
                                        <h3 id="active-advisors">0</h3>
                                    </div>
                                    <i class="bi bi-people-fill text-primary fs-2"></i>
                                </div>
                                <small class="text-muted">Total: <span id="total-advisors">0</span></small>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-3">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Content Today</h5>
                                <div class="d-flex align-items-center">
                                    <div class="flex-grow-1">
                                        <h3 id="content-today">0</h3>
                                    </div>
                                    <i class="bi bi-file-text-fill text-info fs-2"></i>
                                </div>
                                <small class="text-muted">Pending: <span id="pending-content">0</span></small>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-3">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Messages Sent</h5>
                                <div class="d-flex align-items-center">
                                    <div class="flex-grow-1">
                                        <h3 id="messages-sent">0</h3>
                                    </div>
                                    <i class="bi bi-whatsapp text-success fs-2"></i>
                                </div>
                                <small class="text-muted">Success Rate: <span id="success-rate">100</span>%</small>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Story 3.2: Button Analytics & CRM Metrics -->
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="card border-warning">
                            <div class="card-body">
                                <h5 class="card-title text-warning">Button Clicks Today</h5>
                                <div class="d-flex align-items-center">
                                    <div class="flex-grow-1">
                                        <h3 id="total-button-clicks">0</h3>
                                        <small class="text-muted">
                                            Most Popular: <span id="popular-button">UNLOCK_CONTENT</span>
                                        </small>
                                    </div>
                                    <i class="bi bi-cursor-fill text-warning fs-2"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-3">
                        <div class="card border-info">
                            <div class="card-body">
                                <h5 class="card-title text-info">Active Chats</h5>
                                <div class="d-flex align-items-center">
                                    <div class="flex-grow-1">
                                        <h3 id="active-chats">0</h3>
                                        <small class="text-muted">
                                            Avg Response: <span id="avg-response-time">0</span>s
                                        </small>
                                    </div>
                                    <i class="bi bi-chat-dots-fill text-info fs-2"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-3">
                        <div class="card border-success">
                            <div class="card-body">
                                <h5 class="card-title text-success">AI Quality Score</h5>
                                <div class="d-flex align-items-center">
                                    <div class="flex-grow-1">
                                        <h3 id="ai-quality-score">4.2</h3>
                                        <small class="text-muted">
                                            <span id="quality-trend">↗️ Improving</span>
                                        </small>
                                    </div>
                                    <i class="bi bi-robot text-success fs-2"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-3">
                        <div class="card border-dark">
                            <div class="card-body">
                                <h5 class="card-title">Real-time Events</h5>
                                <div class="d-flex align-items-center">
                                    <div class="flex-grow-1">
                                        <div id="live-event-indicator" class="text-success">
                                            <i class="bi bi-circle-fill"></i> Live
                                        </div>
                                        <small class="text-muted" id="last-event">
                                            Last: Chat received
                                        </small>
                                    </div>
                                    <i class="bi bi-broadcast text-dark fs-2"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Story 3.2: Button Analytics Chart & Recent Activity -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <h6 class="mb-0">Button Click Analytics (24h)</h6>
                                <span class="badge bg-primary">Story 3.2</span>
                            </div>
                            <div class="card-body">
                                <canvas id="buttonClicksChart" width="400" height="200"></canvas>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <h6 class="mb-0">Live Webhook Events</h6>
                                <span class="badge bg-success" id="webhook-connection">Connected</span>
                            </div>
                            <div class="card-body">
                                <div id="live-events" style="height: 200px; overflow-y: auto;">
                                    <!-- Live events will be populated here -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">Process Status</h5>
                            </div>
                            <div class="card-body">
                                <div id="process-list">
                                    <div class="text-center text-muted">Loading processes...</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">Recent Activity</h5>
                            </div>
                            <div class="card-body">
                                <div id="activity-log" style="max-height: 300px; overflow-y: auto;">
                                    <div class="text-center text-muted">No recent activity</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">Daily Operations Timeline</h5>
                            </div>
                            <div class="card-body">
                                <canvas id="operations-chart"></canvas>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-header bg-warning text-dark">
                                <h6 class="mb-0">WhatsApp Status</h6>
                            </div>
                            <div class="card-body">
                                <div id="whatsapp-status">
                                    <div class="spinner-border spinner-border-sm" role="status">
                                        <span class="visually-hidden">Loading...</span>
                                    </div>
                                    Checking...
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-header bg-info text-white">
                                <h6 class="mb-0">Google Sheets</h6>
                            </div>
                            <div class="card-body">
                                <div id="sheets-status">
                                    <div class="spinner-border spinner-border-sm" role="status">
                                        <span class="visually-hidden">Loading...</span>
                                    </div>
                                    Checking...
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-header bg-danger text-white">
                                <h6 class="mb-0">Recent Errors</h6>
                            </div>
                            <div class="card-body">
                                <div id="error-count">0 errors in last hour</div>
                                <a href="/logs?level=error" class="btn btn-sm btn-danger mt-2">View Logs</a>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/dashboard.js"></script>
    <script src="/js/webhook-widgets.js"></script>
</body>
</html>